{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "@project_neko/common": ["packages/common/index.ts"],
      "@project_neko/common/*": ["packages/common/src/*"],
      "@project_neko/components": ["packages/components/index.ts"],
      "@project_neko/components/*": ["packages/components/src/*"],
      "@project_neko/request": ["packages/request/index.ts"],
      "@project_neko/request/*": ["packages/request/src/*"],
      "@project_neko/realtime": ["packages/realtime/index.ts"],
      "@project_neko/realtime/*": ["packages/realtime/src/*"],
      "@project_neko/audio-service": ["packages/audio-service/index.ts"],
      "@project_neko/audio-service/*": ["packages/audio-service/src/*"],
      "@project_neko/audio-service/web": ["packages/audio-service/index.web.ts"],
      "@project_neko/audio-service/native": ["packages/audio-service/index.native.ts"]
    }
  },
  "include": ["src/**/*", "packages/**/*", "vite.common.config.ts", "vite.web.config.ts", "src/types/**/*"]
}

